        <Expander Header="Expander" HorizontalAlignment="Left" Height="181" Margin="30,92,0,0" VerticalAlignment="Top" Width="158">
            <Grid Background="#FFE5E5E5">
                <Button Content="Button" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="136"/>
                <Button Content="Button" HorizontalAlignment="Left" Margin="59,52,0,0" VerticalAlignment="Top" Width="75"/>
                <Button Content="Button" HorizontalAlignment="Left" Margin="34,107,0,0" VerticalAlignment="Top" Width="75"/>
            </Grid>
        </Expander>
    </Grid>
</Window>
